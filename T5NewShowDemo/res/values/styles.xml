<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="left_operator_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">@dimen/x3</item>
        <item name="android:paddingRight">@dimen/x3</item>
        <item name="android:drawablePadding">@dimen/x3</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="left_operator_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="left_operator_img_style">
        <item name="android:layout_margin">@dimen/x3</item>
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:layout_width">@dimen/x30</item>
    </style>

    <style name="lineStyle">
        <item name="android:background">@drawable/devider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="bigButton">
        <item name="android:layout_width">@dimen/x120</item>
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:background">@drawable/btn9patch</item>
        <item name="android:layout_marginTop">@dimen/y5</item>
        <item name="android:layout_marginRight">@dimen/x5</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fffefe</item>
    </style>

    <style name="smallButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fffefe</item>
        <item name="android:layout_marginTop">@dimen/y10</item>
        <item name="android:layout_marginRight">@dimen/x10</item>
        <item name="android:background">@drawable/btn9patch</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tabButton">
        <item name="android:layout_width">@dimen/x120</item>
        <item name="android:layout_height">@dimen/y35</item>
        <item name="android:background">@drawable/btn9patch</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fffefe</item>
    </style>

    <style name="text_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_style_base1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="commm_text_style" parent="text_style_base"></style>

    <style name="commm_text_style1" parent="text_style_base1">
        <item name="android:layout_width">@dimen/x100</item>
    </style>

    <style name="mag_card_text_style" parent="text_style_base1"></style>

    <style name="edit_style_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/rounded_edittext_states</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/x5</item>
        <item name="android:layout_marginLeft">@dimen/x10</item>
        <item name="android:layout_marginRight">@dimen/x10</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="mag_card_edit_style" parent="edit_style_base"></style>

    <style name="mag_card_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="ic_card_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/comm_marginTop</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ic_card_layout_style1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/comm_marginTop</item>
    </style>

    <style name="ic_card_text_style" parent="text_style_base1">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ic_card_edit_style" parent="edit_style_base">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ic_card_edit_style1" parent="edit_style_base">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/y25</item>
    </style>

    <style name="ic_card_btn_style" parent="tabButton">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:layout_marginLeft">@dimen/x5</item>
        <item name="android:layout_marginRight">@dimen/x5</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/readCard</item>
    </style>

    <style name="wait_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="id_card_text_style" parent="text_style_base1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="id_card_table_layout_style">
        <item name="android:padding">@dimen/x3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="id_card_table_layout_style1">
        <item name="android:padding">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="id_card_edit_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_edittext_states</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="id_card_edit_style1">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/rounded_edittext_states</item>
        <item name="android:textSize">15sp</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="msg_card_text_style" parent="text_style_base1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right|top</item>
        <item name="android:layout_marginTop">@dimen/y5</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="msg_card_edit_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_edittext_states</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">@dimen/x3</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="msg_card_table_layout_style" parent="id_card_table_layout_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="finger_text_style" parent="text_style_base1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="finger_edit_style1">
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/rounded_edittext_states</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="pin_text_style" parent="text_style_base1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="pin_edit_style1">
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/rounded_edittext_states</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/x5</item>
        <item name="android:layout_marginRight">@dimen/x5</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 标签文字样式 -->
    <style name="LabelStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="LabelFixedHStyle1" parent="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <!-- 单选按钮样式 -->
    <style name="RBStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/component_text_selector</item>
        <item name="android:button">@drawable/nmnx_rb_selector</item>
    </style>

    <style name="RBFixedHMRStyle1" parent="RBStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:layout_marginRight">@dimen/x15</item>
    </style>

    <!-- 输入框属性 -->
    <style name="EditStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/nmnx_edit_selector</item>
        <item name="android:imeOptions">actionDone</item>
        <!-- 键盘变成完成 -->
        <item name="android:paddingLeft">@dimen/x15</item>
    </style>

    <!-- 普通文本输入框属性 -->
    <style name="TextEditTextStyle" parent="EditStyle">
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- 按钮样式 -->
    <style name="BtnStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/nmnx_btn_selector</item>
    </style>

    <!-- 按钮样式 -->
    <style name="ReadCardBtnStyle" parent="BtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="CustomAlertDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>