<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical" >


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:paddingBottom="5dp"
                >

                <TextView
                    style="@style/finger_text_style"
                    android:gravity="right"
                    android:text="指纹仪厂商：" />

                <Spinner
                    android:id="@+id/spinner_ic_card"
                    style="@style/finger_edit_style1"
                    android:layout_height="45dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_editbtn_states"
                    android:paddingRight="10dp" />

                <TextView
                    style="@style/finger_text_style"
                    android:gravity="right"
                    android:text="超时时间：" />

                <EditText
                    android:id="@+id/et_timeout"
                    style="@style/finger_edit_style1"
                    android:inputType="number"
                    android:text="20" >
                </EditText>
            </TableRow>
        </TableLayout>
           
        <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="7"
         
         >
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/finger_text_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="指纹特征：" />

                <Button
                    android:id="@+id/bt_fp_model"
                    style="@style/smallButton"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="读特征" />
            </RelativeLayout>

            <TextView
                android:id="@+id/et_fp_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_states"
                android:padding="5dp"
                android:textSize="20sp" />
      
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/finger_text_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="指纹模板：" />

                <Button
                    android:id="@+id/bt_fp2"
                    style="@style/smallButton"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="读模板" />
            </RelativeLayout>

            <TextView
                android:id="@+id/et_fp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_states"
                android:padding="5dp"
                android:textSize="20sp" />
        </LinearLayout>
        
        </ScrollView> 
		 
        
</LinearLayout>