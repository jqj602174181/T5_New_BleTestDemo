<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/commm_text_style1"
                    android:text="通信方式  :" />

                <RadioGroup
                    android:id="@+id/rg_conn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/comm_marginLeft"
                    android:checkedButton="@+id/b1_conn"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/bt_conn"
                        style="@style/commm_text_style"
                        android:layout_marginRight="20dp"
                        android:checked="true"
                        android:text="蓝牙" />

                    <RadioButton
                        android:id="@+id/ble_conn"
                        style="@style/commm_text_style"
                        android:layout_marginRight="20dp"
                        android:text="BLE" />

                    <RadioButton
                        android:id="@+id/hid_conn"
                        style="@style/commm_text_style"
                        android:text="USB HID" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_marginTop"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    style="@style/commm_text_style1"
                    android:text="USB状态  :" />

                <TextView
                    android:id="@+id/tvUSBStat"
                    style="@style/commm_text_style"
                    android:layout_marginLeft="@dimen/comm_marginLeft"
                    android:text="未检测" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_marginTop"
                android:orientation="horizontal" >

                <TextView
                    style="@style/commm_text_style1"
                    android:text="连接状态  :" />

                <TextView
                    android:id="@+id/tvBTStat"
                    style="@style/commm_text_style"
                    android:layout_marginLeft="@dimen/comm_marginLeft"
                    android:text="未检测" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_marginTop"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    style="@style/commm_text_style1"
                    android:text="蓝牙MAC :" />

                <EditText
                    android:id="@+id/etMac"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/comm_marginLeft"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_edittext_states"
                    android:inputType="text"
                    android:text="@string/macAddr"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnMore"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_conn_open"
                style="@style/smallButton"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="@dimen/comm_marginTop"
                android:text="连接" />

            <LinearLayout
                android:id="@+id/secondBlock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/ble_find"
                        style="@style/smallButton"
                        android:layout_width="100dp"
                        android:text="搜索" />

                    <Button
                        android:id="@+id/ble_lianjie"
                        style="@style/smallButton"
                        android:layout_width="100dp"
                        android:layout_marginLeft="20dp"
                        android:text="连接" />

                    <Button
                        android:id="@+id/ble_stop"
                        style="@style/smallButton"
                        android:layout_width="200dp"
                        android:layout_marginLeft="20dp"
                        android:text="断开连接" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="蓝牙mac："
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/mac_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55:66:99:88:33:22"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="蓝牙列表："
                        android:textColor="@android:color/black"
                        android:textSize="25sp" />

                    <ListView
                        android:id="@+id/list_scan_result"
                        android:layout_width="350dp"
                        android:layout_height="250dp">
                    </ListView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>